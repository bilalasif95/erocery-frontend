{
  "name": "erocery-storefront",
  "description": "A GraphQL-powered, PWA, single-page storefront application for Erocery",
  "repository": "https://github.com/mirumee/saleor-storefront",
  "website": "https://erocery.com/",
  "logo": "https://mirumee.com/img/opensource_saleor.jpg",
  "keywords": ["erocery", "e-commerce", "storefront"],
  "env": {
    "API_URI": {
      "description": "URI of a running instance of Erocery GraphQL API",
      "value": "https://backend.erocery.com/graphql/"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-static.git"
    }
  ]
}
